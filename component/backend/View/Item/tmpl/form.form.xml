<?xml version="1.0" encoding="utf-8"?>
<form
        lessfiles="media://com_todo/css/backend.less||media://com_todo/css/backend.css"
        validate="true"
        tabbed="1"
        >
    <fieldset name="basic_configuration"
              label="COM_TODO_ITEMS_GROUP_BASIC"
              description="COM_TODO_ITEMS_GROUP_BASIC_DESC"
              class="tab-pane active"
            >
        <field name="title" type="Text"
               class="inputbox"
               label="COM_TODO_ITEMS_FIELD_TITLE"
               labelclass="todo-label todo-label-main"
               required="true"
               size="50"
                />

        <field name="due" type="Calendar"
               class="inputbox"
               label="COM_TODO_ITEMS_FIELD_DUE"
               labelclass="todo-label"
               required="true"
               size="20"
               default="NOW"
                />

        <field name="tags" type="tag"
               multiple="multiple"
                />

        <field name="enabled" type="Published"
               label="JSTATUS"
               description="JFIELD_PUBLISHED_DESC" />
    </fieldset>

    <fieldset name="description_group"
              label="COM_TODO_ITEMS_GROUP_DESCRIPTION"
              description="COM_TODO_ITEMS_GROUP_DESCRIPTION_DESC"
              class="tab-pane"
            >
        <field name="description" type="Editor"
               label=""
               class="inputbox"
               required="false"
               filter="JComponentHelper::filterText" buttons="true"
                />
    </fieldset>

    <fieldset name="rules"
              label="COM_TODO_ITEMS_GROUP_PERMISSIONS"
              description="COM_TODO_ITEMS_GROUP_PERMISSIONS_DESC"
              class="tab-pane"
            >

        <field name="asset_id" type="Hidden" emptylabel="true" filter="unset"/>

        <field name="rules"
               type="Rules"
               emptylabel="true"
               translate_label="false"
               filter="rules"
               validate="rules"
               class="inputbox"
               component="com_todo"
               section="unit"/>
    </fieldset>
</form>